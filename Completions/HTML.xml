<?xml version="1.0" encoding="UTF-8"?>
<completions>
	<!-- Tag -->
	<provider name="tags">
		<syntax>vue</syntax>
		<selector>html.tag.open, html.tag.name</selector>
		<expression>(?&lt;=\&lt;)[a-zA-Z0-9_-]*</expression>
		
		<set>html.tags</set>
		<set>html.tags.void</set>
	</provider>
	
	<!-- Attribute -->
	<provider name="attributes.generic">
		<syntax>vue</syntax>
		<selector>html.tag.open, html.tag.open html.tag.attribute:not(value)</selector>
		<expression>(?&lt;=\s)[a-zA-Z0-9-_]*$</expression>
		
		<set>html.attributes</set>
		<set>html.attributes.aria</set>
	</provider>
	
	<!-- Tag-specific Attribute -->
	<provider name="attributes.tag">
		<syntax>vue</syntax>
		<selector>html.tag.open:has-child(html.tag.name:capture(tag))</selector>
		<expression>(?&lt;=\s)[a-zA-Z0-9-_]*$</expression>
		
		<set>html.attributes.${tag}</set>
	</provider>
	<provider name="attributes.tag">
		<syntax>vue</syntax>
		<selector>html.tag.open:has-child(html.tag.name:capture(tag)) html.tag.attribute:not(value)</selector>
		<expression>(?&lt;=\s)[a-zA-Z0-9-_]*$</expression>
		
		<set>html.attributes.${tag}</set>
	</provider>
	
	<!-- Tag-specific Attribute Value -->
	<provider name="attributes.tag.values">
		<syntax>vue</syntax>
		<selector>html.tag.open:has-child(html.tag.name:capture(tag)) html.tag.attribute:has-child(html.tag.attribute.name:capture(attribute)) html.tag.attribute.value</selector>
		<expression>(?&lt;=(=&quot;|=\s&quot;|=&apos;|=\s&apos;|\s))[a-zA-Z0-9-_]*</expression>
		
		<set>html.attribute.values.${attribute}</set>
		<set>html.attribute.values.${tag}.${attribute}</set>
	</provider>
	
	<!-- Class Attribute Values -->
	<provider name="attributes.class.values">
		<syntax>vue</syntax>
		<selector>html.tag.attribute.class html.tag.attribute.value</selector>
		<expression>(?&lt;=(=&quot;|=\s&quot;|=&apos;|=\s&apos;|\s))[a-zA-Z0-9-_]*</expression>
		
		<symbols type="style-class" syntax="css" />
	</provider>
	
	<!-- ID Attribute Values -->
	<provider name="attributes.id.values">
		<syntax>vue</syntax>
		<selector>html.tag.attribute.id html.tag.attribute.value,
			html.tag.attribute.aria-id html.tag.attribute.value</selector>
		<expression>(?&lt;=(=&quot;|=\s&quot;|=&apos;|=\s&apos;|\s))[a-zA-Z0-9-_]*</expression>
		
		<symbols type="style-id" syntax="css" />
	</provider>
	
	<!-- Filepath Attribute Values -->
	<provider name="attributes.values.filepath">
		<syntax>vue</syntax>
		<selector>html.tag.attribute.value.filepath</selector>
		<expression>(?&lt;=(=&quot;|=\s&quot;|=&apos;|=\s&apos;|\s))[a-zA-Z0-9-_/]*</expression>
		
		<assistant type="files" />
	</provider>
	
	<!-- Entity -->
	<provider name="entities">
		<syntax>vue</syntax>
		<selector>html.entity</selector>
		<expression>&amp;[a-zA-Z0-9]*;?</expression>
		
		<set>html.entities</set>
	</provider>
</completions>